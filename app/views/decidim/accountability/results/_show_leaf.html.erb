<div class="row accountability result-view">
  <div class="small-12 medium-3 columns">
    <%= render partial: "decidim/accountability/results/nav_tree", locals: { category: result.parent.try(:category), result: result.parent} %>
  </div>
  <div class="small-12 medium-9 columns">
    <div class="title">
      <%= icon("proposals", class: "icon", aria_label: t("models.result.fields.title", scope: "decidim.accountability"), role: "img") %>
      <h2 class="heading2"><%= translated_attribute result.title %></h2>
    </div>

    <div class="row">
      <div class="columns section mediumlarge-5 mediumlarge-push-7 end">
        <div class="progress-level">
          <div class="progress-label">
            <span class="progress-text"><%= t("models.result.fields.progress", scope: "decidim.accountability") %>:</span>
            <span class="progress-figure">
              <%= display_percentage result.progress %>
            </span>
          </div>

          <div class="progress">
            <div class="progress-meter" style="width:<%= display_percentage result.progress %>"></div>
          </div>
        </div>
      </div>

      <div class="columns mediumlarge-3 mediumlarge-pull-5 end">
        <div class="section">
          <div class="result-meta">
            <% if result.start_date %>
              <div class="result-meta--label"><%= t("models.result.fields.start_date", scope: "decidim.accountability") %></div>
              <div class="result-meta--data"><%= result.start_date %></div>
            <% end %>
          </div>

          <div class="result-meta">
            <% if result.end_date %>
              <div class="result-meta--label"><%= t("models.result.fields.end_date", scope: "decidim.accountability") %></div>
              <div class="result-meta--data"><%= result.end_date %></div>
            <% end %>
          </div>

          <div class="result-meta">
            <% if result.status %>
              <div class="result-meta--label"><%= t("models.result.fields.status", scope: "decidim.accountability") %></div>
              <div class="result-meta--data"><%= translated_attribute(result.status.name) %></div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="small-12 columns">
        <hr>

        <div class="section">
          <%== translated_attribute result.description %>
          <%= render partial: "tags", locals: { result: result } %>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: "stats" %>
</div>

<%= comments_for result %>
