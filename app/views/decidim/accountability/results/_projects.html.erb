<div class="card card--action card--list">
  <% result.projects.each do |project| %>
    <div class="card--list__item">
      <%= icon "actions", class: "card--list__icon", remove_icon_class: true %>
      <%= link_to project_path(project), class: "card--list__text card__link card__link--block" do %>
        <h5 class="card--list__heading">
          <%= translated_attribute(project.title) %>
        </h5>
        <%= display_percentage project.progress %>
        <%= t("models.project.fields.start_date", scope: "decidim.accountability") %>: <%= project.start_date %>
        <%= t("models.project.fields.end_date", scope: "decidim.accountability") %>: <%= project.end_date %>
        <%= t("models.project.fields.status", scope: "decidim.accountability") %>:
         <%= t("models.project.valid_statuses.#{project.status}", scope: "decidim.accountability") %>
      <% end %>
    </div>
  <% end %>
</div>
