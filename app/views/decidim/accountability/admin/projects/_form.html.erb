<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column">
      <%= form.translated :editor, :description %>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.date_field :start_date %>
      </div>

      <div class="columns xlarge-6">
        <%= form.date_field :end_date %>
      </div>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.label :status %>
      <%= select :project, :status, Decidim::Accountability::Project::VALID_STATUSES.map{ |s| [t("models.project.valid_statuses.#{s}", scope: "decidim.accountability"), s] }, include_blank: true %>
      </div>

      <div class="columns xlarge-6">
        <%= form.text_field :progress %>
      </div>
    </div>

    <div class="columns">
      <%= form.text_field :external_id %>
    </div>
  </div>
</div>
